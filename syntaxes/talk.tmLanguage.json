{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Talk",
	"patterns": [
		{
			"include": "#attributes"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#line"
		}
	],
	"repository": {
		"attributes": {
			"name": "keyword.control",
			"begin": "(@|\\>|\\?|\\*){",
			"end": "}",
			"patterns": [
				{
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment",
			"begin": "#{",
			"end": "}",
			"patterns": [
				{
					"match": "\\\\."
				}
			]
		},
		"variables": {
			"name": "constant",
			"patterns": [
				{
					"name": "constant",
					"match": "\\$\\w+"
				}
			]
		},
		"line": {
			"name": "constant",
			"patterns": [
				{
					"name": "string",
					"match": "\\t-"
				}
			]
		}
	},
	"scopeName": "source.talk"
}